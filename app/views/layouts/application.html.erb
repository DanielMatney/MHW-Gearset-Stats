<!DOCTYPE html>
<html>
  <head>
    <title>MHWGearsetStats</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <% if logged_in? %>
    <div align="right"><h2>You are logged in as <%= session[:username] %></h2></div>
    <div align="right"><h3><a href="/logout" style="font-size: 20px; font-weight: bold;">Logout</a></h3></div>
  <% else %>
    <div align="right"><h3>You are not logged in</h3></div>
    <div align="right"><a href="/login" style="font-size: 20px; font-weight: bold;">Login</a></div>
    <div align="right"><a href="/signup" style="font-size: 20px; font-weight: bold;">Sign-up</a></div>
  <% end %>

  <body background="https://www.godisageek.com/wp-content/uploads/logo_iceborne_l.png">
    <div>
      <div><a href="/">Home</a></div>
      <% if session[:username] %>
      <div><a href="/gearsets">Gearsets</a></div>
      <% end %>
    </div>
    <%= yield %>
  </body>
</html>
